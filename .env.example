# Database Configuration
DB_ROOT_PASSWORD=your_strong_root_password_here
DB_USER=error_user
DB_PW=your_strong_password_here

# Cloudflare R2 (세션 리플레이 저장소 - 무료!)
# R2 Dashboard: https://dash.cloudflare.com/?to=/:account/r2
CLOUDFLARE_R2_ACCOUNT_ID=your-account-id  # Cloudflare Account ID
CLOUDFLARE_R2_BUCKET=error-monitor-replays
CLOUDFLARE_R2_ACCESS_KEY=your-r2-access-key
CLOUDFLARE_R2_SECRET_KEY=your-r2-secret-key

# Discord Bot (선택사항)
DISCORD_BOT_TOKEN=your-discord-bot-token

# OAuth2 - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth2 - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Secret (프로덕션에서는 반드시 변경!)
JWT_SECRET=your-very-strong-jwt-secret-key-change-this-in-production
